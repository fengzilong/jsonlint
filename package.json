{
  "name": "@biu/jsonlint",
  "version": "2.0.0",
  "description": "lint your json, report all errors at once",
  "main": "lib/index.js",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "vitest run --coverage",
    "pretest": "npm run lint",
    "lint": "eslint ./lib",
    "prepare": "simple-git-hooks"
  },
  "keywords": [
    "json",
    "lint",
    "comment",
    "syntax",
    "error"
  ],
  "author": "fengzilong",
  "license": "MIT",
  "dependencies": {
    "emphasize": "^6.0.0",
    "nanocolors": "^0.2.13",
    "vscode-json-languageservice": "^5.4.1"
  },
  "devDependencies": {
    "eslint": "^7.31.0",
    "eslint-config-mo": "^0.5.3",
    "vitest": "^2.0.5",
    "@vitest/coverage-v8": "^2.0.5",
    "simple-git-hooks": "^2.11.1",
    "strip-ansi": "^7.1.0"
  },
  "repository": "github:fengzilong/jsonlint",
  "homepage": "https://github.com/fengzilong/jsonlint#readme",
  "bugs": {
    "url": "https://github.com/fengzilong/jsonlint/issues"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint"
  }
}
